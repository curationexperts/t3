<h1>Roles</h1>

<div id="roles">
  <table>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Users</th>
    </tr>
    <% @roles.each do |role| %>
      <tr id='<%= dom_id role %>'>
        <td class='name'><%= link_to role.name, role -%></td>
        <td class='description'><%= role.description -%></td>
        <td class='users'><%= role.users.join(', ') -%></td>
      </tr>
    <% end %>
  </table>
</div>

<%= link_to "New role", new_role_path %>
