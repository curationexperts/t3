:root {
/*  Consider settings for these https://getbootstrap.com/docs/5.3/customize/color-modes/  */
  --header-background:  <%= Theme.current.header_color %>;
  --footer-background:  <%= Theme.current.header_color %>;
  --footer-text:        <%= Theme.current.header_text_color %>;
  --main-background:    <%= Theme.current.background_color %>;
  --bs-dark-rgb:        <%= rgb(Theme.current.header_color) %>;
  --bs-navbar-color:    <%= rgb(Theme.current.header_text_color) %>;
  --bs-body-bg:         <%= Theme.current.background_color %>;
  --bs-body-bg-rgb:     <%= rgb(Theme.current.background_color) %>;
}
